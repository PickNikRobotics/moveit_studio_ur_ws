<!-- UR5e inspired from https://github.com/google-deepmind/mujoco_menagerie/tree/main/universal_robots_ur5e -->
<!-- Kitchen inspired by https://github.com/Farama-Foundation/Gymnasium-Robotics/tree/main/gymnasium_robotics/envs/franka_kitchen -->

<mujoco model="ur5e scene">
  <include file="ur5e.xml"/>
    <include file="assets/franka_assets/assets.xml"/>
    <include file="assets/item_assets/oven_asset.xml"/>
    <include file="assets/item_assets/counters_asset.xml"/>
    <include file="assets/item_assets/backwall_asset.xml"/>
    <include file="assets/item_assets/slidecabinet_asset.xml"/>
    <include file="assets/item_assets/hingecabinet_asset.xml"/>
    <include file="assets/item_assets/microwave_asset.xml"/>
    <include file="assets/item_assets/kettle_asset.xml"/>


  <statistic center="0.3 0 0.4" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <texture type="2d" name="countertop" builtin="flat" rgb1="0.8 0.7 0.6" width="512" height="512"/>
    <material name="countertop" texture="countertop" texuniform="true" reflectance="0.3"/>
    <texture type="2d" name="fridge" builtin="flat" rgb1="0.8 0.8 0.8" width="512" height="512"/>
    <material name="fridge" texture="fridge" texuniform="true" reflectance="0.3"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" pos="0 0 -1.626" size="0 0 0.05" type="plane" material="groundplane"/>


        <body name='desk' pos='-0.1 0.75 -1.626'>

            <body name="counters1" pos="0 0 0" >
                <include file="assets/item_assets/counters_chain.xml"/>
            </body>
            <body name="oven" pos="0 0 0" >
                <include file="assets/item_assets/oven_chain.xml"/>
            </body>
            <body name="backwall" pos="0 0 0" >
                <include file="assets/item_assets/backwall_chain.xml"/>
            </body>
            <body name="slidecabinet" pos="0.4 0.3 2.6" >
                <include file="assets/item_assets/slidecabinet_chain.xml"/>
            </body>
            <body name="hingecabinet" pos="-0.504 0.28 2.6" >
                <include file="assets/item_assets/hingecabinet_chain.xml"/>
            </body>
            <body name="microwave" pos="-0.750 -0.025 1.6" euler="0 0 0.3">
                <include file="assets/item_assets/microwave_chain.xml"/>
            </body>
        </body>
        <body name="kettle" pos="-0.269 0.35 0">
            <freejoint name="kettle"/>
            <include file="assets/item_assets/kettle_chain.xml"/>
        </body>
  </worldbody>
</mujoco>
